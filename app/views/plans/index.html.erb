


<div class="row">
  <div class="col-sm-6">
    <h1>Plans</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_plan_path, class: 'btn btn-primary' do %>
    Add New Plan
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Minimum</th>
            <th>Maximum</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @plans.each do |plan| %>
        <%= content_tag :tr, id: dom_id(plan), class: dom_class(plan) do %>
          

                      <td><%= plan.title %></td>
                      <td><%= plan.minimum %></td>
                      <td><%= plan.maximum %></td>
          
          
            <td><%= link_to 'Show', plan %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
